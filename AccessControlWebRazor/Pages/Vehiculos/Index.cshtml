@page
@model AccessControlWebRazor.Pages.Vehiculos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    th, td {
        padding: 0.5rem !important;
    }
</style>

<div class="content-wrapper">
    <div class="content-fluid">
        <div class="col-12 px-0">
            <div class="card mb-0" style="height: 840px; width: auto; border-radius: 0">
                <div class="card-header">
                    <div class="d-flex row justify-content-between align-items-center">
                        <!-- Primera Columna -->
                        <div class="col-md-4" style="width: fit-content;">
                            <h3 class="card-title mt-2" style="font-size: 20px; font-weight: bold;">Tabla de Vehículos Externos</h3>
                        </div>

                        <!-- Segunda Columna -->
                        <div class="col-md-5" style="max-width: 450px; width: fit-content;">
                            <form method="post" class="form-inline">
                                <div class="form-row">
                                    <div class="col-3">
                                        <label for="Filter" class="mr-2 w-100 mt-2">Filtro:</label>
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="SearchModel.Filter" type="text" class="form-control w-100" style="border: 1px solid #ddd; border-radius: 4px; width: auto; background-color: #F5CBA7; color: #fff;" />
                                    </div>
                                    <div class="col-3">
                                        <input type="submit" style="background-color: #F8C471;color: #138D75; width: 100px" asp-page-handler="Search" value="Buscar 🔍" class="btn btn-secondary" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- /.card-header -->
                <!-- /.card-body -->
                <div class="card-body table-responsive p-0" style="max-height: auto; width: auto; overflow-y: auto; text-align: left;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead style="font-size: 18px; font-weight: bold; color: #fff;">
                            <tr>
                                <th style="background-color: aquamarine;">
                                    @Html.DisplayNameFor(model => model.Vehiculo[0].Dominio)
                                </th>
                                <th style="background-color: aqua;">
                                    @Html.DisplayNameFor(model => model.Vehiculo[0].Brand)
                                </th>
                                <th style="background-color: aquamarine;">
                                    @Html.DisplayNameFor(model => model.Vehiculo[0].Model)
                                </th>
                                <th style="background-color: aqua;">
                                    @Html.DisplayNameFor(model => model.Vehiculo[0].IsActive)
                                </th>
                            </tr>
                        </thead>
                        <tbody style="font-size: 16px;">
                            @foreach (var item in Model.Vehiculo)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dominio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Brand)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Model)
                                    </td>
                                    @if (item.IsActive == 0)
                                    {
                                        <td>
                                            <i class="fas fa-times-circle text-danger"></i>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <i class="fas fa-check-circle text-success"></i>
                                        </td>
                                    }

                                    @*<td>
                                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div> <!-- /.card-body -->
            </div>
        </div>
    </div>
</div>