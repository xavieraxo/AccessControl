<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] AccessControlWebRazor</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLte/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLte/dist/css/adminlte.min.css">
    <!-- AdminLTE Skins -->
    <link rel="stylesheet" href="~/AdminLte/dist/css/skins/_all-skins.min.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- DatePicker -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.12.0/dist/css/bootstrap-datepicker.min.css">
    <!-- Custom CSS (optional) -->
    <link rel="stylesheet" href="~/css/custom.css">
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="hold-transition">
    <div class="wrapper">
        <div>
            <partial name="_Navbar" />
            <partial name="_Sidebar" />

            @RenderBody()
        </div>
    </div>

    <partial name"_Footer" />

    <!-- jQuery -->
    <script src="~/AdminLte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLte/dist/js/adminlte.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/AdminLte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- Bootstrap DatePicker -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.12.0/dist/js/bootstrap-datepicker.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/custom.js"></script>

    <script>
        // Function to change skin
        function changeSkin(skin) {
            var body = document.getElementsByTagName('body')[0];
            body.className = body.className.replace(/skin-\S+/g, skin);
        }

        // Save skin preference in local storage
        function changeSkin(skin) {
            document.body.className = document.body.className.replace(/skin-\S+/g, skin);
            localStorage.setItem('skin', skin);
        }

        // Apply saved skin on load
        window.onload = function () {
            var savedSkin = localStorage.getItem('skin');
            if (savedSkin) {
                document.body.className = document.body.className.replace(/skin-\S+/g, savedSkin);
            }
        }
    </script>
    <script>
        // Function to change skin
        function changeSkin(skin) {
            var body = document.getElementsByTagName('body')[0];
            var navbar = document.getElementsByClassName('main-header')[0];
            var sidebar = document.getElementsByClassName('main-sidebar')[0];

            // Remove existing skin classes
            body.className = body.className.replace(/skin-\S+/g, skin);
            navbar.className = navbar.className.replace(/navbar-\S+/g, 'navbar-' + skin.split('-')[1]);
            sidebar.className = sidebar.className.replace(/sidebar-\S+/g, 'sidebar-' + skin.split('-')[1]);

            // Store the selected skin in localStorage
            localStorage.setItem('skin', skin);
        }

        // Apply saved skin on load
        window.onload = function () {
            var savedSkin = localStorage.getItem('skin');
            if (savedSkin) {
                var body = document.getElementsByTagName('body')[0];
                var navbar = document.getElementsByClassName('main-header')[0];
                var sidebar = document.getElementsByClassName('main-sidebar')[0];

                body.className = body.className.replace(/skin-\S+/g, savedSkin);
                navbar.className = navbar.className.replace(/navbar-\S+/g, 'navbar-' + savedSkin.split('-')[1]);
                sidebar.className = sidebar.className.replace(/sidebar-\S+/g, 'sidebar-' + savedSkin.split('-')[1]);
            }
        }
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>