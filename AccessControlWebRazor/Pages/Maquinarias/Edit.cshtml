                                class="form-control"></select>
                        <span asp-validation-for="Procesamiento.CentroCosto" class="text-danger"></span>
                    </div>*@

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
