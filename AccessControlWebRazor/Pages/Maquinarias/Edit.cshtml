                    </div>

                    <div class="form-group">
                        <label asp-for="Procesamiento.DNI">DNI</label>
                        <input asp-for="Procesamiento.DNI" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="Procesamiento.HoraIngreso" class="control-label"></label>
                        <input asp-for="Procesamiento.HoraIngreso" class="form-control" readonly />
                        <span asp-validation-for="Procesamiento.HoraIngreso" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Procesamiento.HoraEgreso" class="control-label"></label>
                        <input asp-for="Procesamiento.HoraEgreso" class="form-control" readonly />
                        <span asp-validation-for="Procesamiento.HoraEgreso" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Procesamiento.TotalHoras" class="control-label"></label>
                        <input asp-for="Procesamiento.TotalHoras" class="form-control" readonly />
                        <span asp-validation-for="Procesamiento.TotalHoras" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Procesamiento.Procesado" class="control-label"></label>
                        <input asp-for="Procesamiento.Procesado" class="form-control" readonly />
                        <span asp-validation-for="Procesamiento.Procesado" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Procesamiento.ProcedenciaEmpleado" class="control-label"></label>
                        <input asp-for="Procesamiento.ProcedenciaEmpleado" class="form-control" readonly />
                        <span asp-validation-for="Procesamiento.ProcedenciaEmpleado" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Procesamiento.EstadoFichada" class="control-label"></label>
                        <input asp-for="Procesamiento.EstadoFichada" class="form-control" readonly />
                        <span asp-validation-for="Procesamiento.EstadoFichada" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Centro de Costo</label>

                        <select class="form-control" asp-for="Procesamiento.CentroCostoModel.Codigo"
                         asp-items="@(Model.costoEntities != null ? new SelectList(Model.costoEntities, "Codigo", "Nombre") : null)">
                        </select>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="Procesamiento.CentroCosto">Centro de Costo</label>
                        <select asp-for="Procesamiento.CentroCosto"
